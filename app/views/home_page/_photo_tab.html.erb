<div class="col-sm-12 col-md-12 col-lg-6 border rounded d-flex p-0 mt-2" id="post_photo_<%= photo.user.id %>" >
  <div class="container m-1">
    <div class="row">
      <%= link_to photo_path(photo), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal_photo', class: 'col-12 col-sm-12 col-md-6 p-1 size-photos'} do %>
          <img class="rounded-lg w-100 h-100 pr-2" src="<%= url_for(photo.image) %>">
      <% end %>
      <div class="col-md-6 p-0 ">
        <div class="mt-1">
          <%unless current_user.id == photo.user.id %>
            <div id="follow_form_feeds_photo_<%= photo.user.id %>">
              <%= render 'follow_home', user: photo.user %>
            </div>
          <% end %>
          <a href="#" class="nav-link d-inline-flex p-0">
            <img src="<%= photo.user.avatar %>" class="rounded-circle" id="avatar_top">
            <p class="text-primary pt-2 pl-2"><b><%= photo.user.full_name %></b></p>
          </a>
        </div>
        <div style="height: 140px;">
          <h4><b><%= photo.title %></b></h4>
          <p><%= photo.description %></p>
        </div>
        <div class="container d-inline pl-0 b-line">
          <div class="d-inline-flex">
            <img class="btn-like" src="/assets/like.png">
            <p style="font-size: 18px; margin: 5px;"><b> 120</b></p>
          </div>
          <p class="pt-2 float-right "><%= photo.created_at %></p>
        </div>
      </div>
    </div>
  </div>
</div>