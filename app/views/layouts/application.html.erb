<!DOCTYPE html>
<html>
  <head>
    <title>Focobook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="m-0">
    <!--modal photo-->
    <div class="modal fade" id="modalPhoto">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
              <!-- Modal Header -->
              <div class="modal-header">
                  <h4><b>Title</b></h4>
                  <button type="button" class="close" data-dismiss="modal">×</button>
                </div>

              <!-- Modal body -->
                <div class="modal-body">
                  <img class="rounded-sm w-100 h-100" src="/assets/img1.jpeg">
                </div>

              <!-- Modal footer -->
                <div class="modal-header">
                  <p>Description: di choi voi ban be, ngam canh thien nhien</p>
                </div>
            </div>
         </div>
    </div><!--end modal Photo-->

    <!--modal Album-->
    <div class="modal fade" id="modalAlbum">
        <div class="modal-dialog modal-xl">
          <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
              <h4><b>Title</b></h4>
              <button type="button" class="close" data-dismiss="modal">×</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
              <div id="showAlbum" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ul class="carousel-indicators">
                  <li data-target="#showAlbum" data-slide-to="0" class="active"></li>
                  <li data-target="#showAlbum" data-slide-to="1"></li>
                  <li data-target="#showAlbum" data-slide-to="2"></li>
                </ul>
                <!-- The slideshow -->
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img class="w-100 h-100" src="/assets/img1.jpeg" alt="Los Angeles">
                  </div>
                    <div class="carousel-item">
                      <img class="w-100 h-100" src="/assets/img1.jpeg" alt="Chicago">
                    </div>
                  <div class="carousel-item">
                    <img class="w-100 h-100" src="/assets/img1.jpeg" alt="New York">
                  </div>
                </div>
                <!-- Left and right controls -->
                <a class="carousel-control-prev" href="#showAlbum" data-slide="prev">
                  <span class="carousel-control-prev-icon"></span>
                </a>
                <a class="carousel-control-next" href="#showAlbum" data-slide="next">
                  <span class="carousel-control-next-icon"></span>
                </a>
              </div>
            </div>
            <!-- Modal footer -->
            <div class="modal-header">
              <p>Description: di choi voi ban be, ngam canh thien nhien</p>
            </div>
          </div>
       </div>
    </div>
    <!--end modal Album-->
    <header class="row">
      <div class="col-0 col-sm-2 col-md-2">
        <a href="/users" class="navbar-brand text-white mt-2 float-right"><h4><b>Fakebook</b></h4></a>
      </div>
      <div class="col-12 col-sm-3 col-md-6">
        <input class="form-control mt-2 w-75" type="search" placeholder="Search Photo/Album" aria-label="Search">
      </div>
      <% if !current_user.nil? %>
        <div class="col-sm-4 col-md-2">
          <a href="/users/show" class="nav-link d-inline-flex text-white m-0 float-right">
            <img src="<%=current_user.avatar.url() %>" class="rounded-circle mr-2" id="avatarTop">
            <p class="text-white pt-2 m-0"><b> <%= current_user.last_name.to_s %><%= current_user.first_name.to_s %> </b></p>
          </a>
        </div>
        <div class="col-sm-1 col-md-1">
          <a href="/users/sign_out" data-method="delete" class="nav-link text-white pt-3 m-0 float-right"><b>Logout</b></a>
        </div>
      <% else %>
        <div class="col-sm-3 col-md-1">
        </div>
        <div class="col-sm-1 col-md-1">
          <a href="/users/sign_up" class="nav-link text-white pt-3 m-0 float-right"><b>Sign up</b></a>
        </div>
        <div class="col-sm-1 col-md-1">
          <a href="/users/sign_in" class="nav-link text-white pt-3 m-0 float-left"><b>Log in</b></a>
        </div>
      <% end %>

    </header>

    <% if notice %>
  <div id="notice" class="alert alert-info alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= notice %>
  </div>
<% end %>

    <%= yield %>
  </body>
    <%= javascript_include_tag "application" %>
    <%= custom_bootstrap_flash %>
</html>
