<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="https://use.fontawesome.com/releases/v5.0.4/css/all.css" rel="stylesheet">

    <title>Focobook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="m-0">
    <!--modal photo-->
    <div class="modal fade" id="modal_photo">
      <div class="modal-dialog modal-xl">
        <div class="modal-content">

        </div>
      </div>
    </div><!--end modal Photo-->

    <!--modal Album-->
    <div class="modal fade" id="modal_album">
      <div class="modal-dialog modal-xl">
        <div class="modal-content">

        </div>
      </div>
    </div>
    <!--end modal Album-->
    <header class="row">
      <div class="col-0 col-sm-2 col-md-2">
        <a href="/" class="navbar-brand text-white mt-2 float-right"><h4><b>Fakebook</b></h4></a>
      </div>
      <div class="col-12 col-sm-3 col-md-6">
        <input class="form-control mt-2 w-75" type="search" placeholder="Search Photo/Album" aria-label="Search">
      </div>
      <% if !current_user.nil? %>
        <div class="col-sm-4 col-md-2">
          <a href="<%= user_path(current_user.id) %>" class="nav-link d-inline-flex text-white m-0 float-right">
            <img src="<%=current_user.avatar.url() %>" class="rounded-circle mr-2" id="avatarTop">
            <p class="text-white pt-2 m-0"><b><%= current_user.full_name %></b></p>
          </a>
        </div>
        <div class="col-sm-1 col-md-1">
          <a href="/users/sign_out" data-method="delete" class="nav-link text-white pt-3 m-0 float-right"><b>Logout</b></a>
        </div>
      <% else %>
        <div class="col-sm-3 col-md-1">
        </div>
        <div class="col-sm-1 col-md-1">
          <a href="/users/sign_up" class="nav-link text-white pt-3 m-0 float-right"><b>Sign up</b></a>
        </div>
        <div class="col-sm-1 col-md-1">
          <a href="/users/sign_in" class="nav-link text-white pt-3 m-0 float-left"><b>Log in</b></a>
        </div>
      <% end %>

    </header>

    <% if notice %>
      <div id="notice" class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= notice %>
      </div>
    <% end %>

    <%= yield %>
  </body>
    <%= javascript_include_tag "application" %>
    <%= custom_bootstrap_flash %>
</html>
