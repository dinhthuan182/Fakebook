// render nut unfollow
$("#follow_form-<%= @user.id %>").html("<%= escape_javascript(render('users/unfollow')) %>");
$("#following_form-<%= @user.id %>").html("<%= escape_javascript(render('users/unfollow')) %>");
$("#follower_form-<%= @user.id %>").html("<%= escape_javascript(render('users/unfollow')) %>");
// cap nhat tab followers va following
$("#followersT-<%= @user.id %>").html('<b><%= @user.followers.count %></b><small> <b>FOLLOWERS</b></small>');
$("#followingT-<%= current_user.id %>").html('<b><%= current_user.following.count %></b><small> <b>FOLLOWING</b></small>');
//tao card user trong tab following cua current user
$("#moreFollowing-<%= current_user.id %>").prepend('<div class="col-12 col-sm-6 col-lg-3 p-1" id="following-<%= @user.id %>-in-<%= current_user.id %>"><div class="card rounded-sm"><div class="d-flex justify-content-center mt-3"><img class="card-img-top rounded-circle" src="<%= @user.avatar.url() %>" alt="Card image" style="width: 150px; height: 150px;"></div><div class="card-body text-center" style="height: 230px;"><h4 class="card-title"><b><%= @user.first_name %> <%= @user.last_name %> </b></h4><ul class="nav d-inline-flex"><li class="m-2"><a class="nav-link" data-toggle="tab" href="#"><b><%= @user.photos.count %><br><small>PHOTOS</small></b></a></li><li class="m-2"><a class="nav-link" data-toggle="tab" href="#"><b><%= @user.albums.count %><br><small>ALBUMS</small></b></a></li></ul><%unless current_user.id == @user.id %><div id="following_form-<%= @user.id %>"><% if current_user.following?(@user) %><%= form_for(current_user.active_relationships.find_by(followed_id: @user.id),html: { method: :delete },remote: true) do |f| %><%= f.submit "Unfollow", class: "btn btn-warning mt-4 btnRadius", style:"border: 3px solid #ff8d00;" %><% end %><% else %><%= form_for(current_user.active_relationships.build, remote: true) do |f| %><div><%= hidden_field_tag :followed_id, @user.id %></div><%= f.submit "Follow", class: "btn mt-4 btnRadius text-warning", style:"border: 3px solid #ff8d00;" %><% end %><% end %></div><% end %></div></div></div>');
//tao card user trong tab follower cua user
$("#moreFollowers-<%= @user.id %>").prepend('<div class="col-12 col-sm-6 col-lg-3 p-1" id="follower-<%= current_user.id %>-in-<%= @user.id %>"><div class="card rounded-sm"><div class="d-flex justify-content-center mt-3"><img class="card-img-top rounded-circle" src="<%= current_user.avatar.url() %>" alt="Card image" style="width: 150px; height: 150px;"></div><div class="card-body text-center" style="height: 230px;"><h4 class="card-title"><b><%= current_user.first_name %> <%= current_user.last_name %> </b></h4><ul class="nav d-inline-flex"><li class="m-2"><a class="nav-link" data-toggle="tab" href="user_path(@user)"><b><%= current_user.photos.count %><br><small>PHOTOS</small></b></a></li><li class="m-2"><a class="nav-link" data-toggle="tab" href="user_path(@user)"><b><%= current_user.albums.count %><br><small>ALBUMS</small></b></a></li></ul></div></div></div>');